{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2015"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "paths": {
      "@muya/*": ["./lib/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": ["./lib/**/*", "./types/**/*"],
}
